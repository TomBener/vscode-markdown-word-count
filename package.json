{
  "name": "markdown-word-count",
  "displayName": "Markdown Word Count",
  "description": "A Word Count extension for Markdown and plain text files,support CJK and Emoji, support selection count.",
  "version": "0.0.7",
  "publisher": "CurlyBrackets",
  "engines": {
    "vscode": "^1.62.0"
  },
  "icon": "images/icon.png",
  "keywords": [
    "word",
    "count",
    "markdown",
    "word-count",
    "word count",
    "cjk",
    "emoji"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "browser": "./out/main.js",
  "main": "./out/main.js",
  "repository": {
    "url": "https://github.com/curly210102/vscode-markdown-word-count.git",
    "type": "git"
  },
  "contributes": {
    "configuration": {
      "title": "Markdown Word Count",
      "properties": {
        "markdown-word-count.selectionCount": {
          "type": "boolean",
          "default": true,
          "description": "Enable count selection text"
        },
        "markdown-word-count.statusBarCounts": {
          "type": "object",
          "properties": {
            "words": {
              "type": "boolean"
            },
            "lines": {
              "type": "boolean"
            },
            "characters": {
              "type": "boolean"
            },
            "charactersWithSpaces": {
              "type": "boolean"
            }
          },
          "default": {
            "words": true,
            "lines": false,
            "characters": false,
            "charactersWithSpaces": false
          },
          "description": "customize the count items shown in status bar"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/emoji-regex": "^9.2.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.33",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "^0.12.29",
    "eslint": "^7.27.0",
    "glob": "^7.2.0",
    "mocha": "^8.4.0",
    "typescript": "^4.4.4",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@homegrown/word-counter": "^0.1.7",
    "emoji-regex": "^9.2.2"
  },
  "license": "MIT"
}
